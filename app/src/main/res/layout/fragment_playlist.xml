<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/txt_create_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="20dp"
        android:inputType="textPersonName"
       android:hint="Enter Playlist Name"
        />

    <ImageButton
        android:id="@+id/btn_create_playlist"
        app:layout_constraintLeft_toRightOf="@id/txt_create_playlist"
        android:layout_width="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_input_add"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/playlist_view"
        app:layout_constraintTop_toBottomOf="@id/txt_create_playlist"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        />
</android.support.constraint.ConstraintLayout>